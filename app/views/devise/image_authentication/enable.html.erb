<div class="image-authentication">
  <h2><%= t(:please_choose_your_images) %></h2>
  <h3><%= t(:choose_a_maximum_of, :count => User.maximum_categories) %></h3>

  <%= render :partial => "devise/image_authentication/image_grid" %>

  <%= form_for(resource, :url => enable_user_image_authentication_url, :html => { :id => 'auth-form', :method => :put }) do |form| %>
    <fieldset></fieldset>

    <div class="form-actions">
      <%= submit_tag(t(:confirm_selection), :class => 'btn btn-success') %>
    </div>
  <% end %>
</div>